{
  "meta": {
    "title": "Pulse",
    "composer": "Claude Opus 4.5",
    "genre": "electronic/experimental",
    "description": "A rhythmic journey through four drum kits. Tests the unified DrumEngine with layered patterns and kit switching.",
    "tags": ["drums", "v091", "interlude", "breakbeat"]
  },
  "settings": {
    "tempo": 92,
    "key": "D minor",
    "timeSignature": "4/4"
  },

  "instruments": {
    "drums_808": { "preset": "drums", "volume": -3 },
    "drums_909": { "preset": "drums", "volume": -3 },
    "drums_acoustic": { "preset": "drums", "volume": -3 },
    "drums_lofi": { "preset": "drums", "volume": -3 },

    "sub": {
      "preset": "sub_bass",
      "volume": -9
    },
    "pad": {
      "preset": "warm_pad",
      "volume": -12,
      "effects": [{ "type": "reverb", "wet": 0.4, "decay": 3 }]
    },
    "texture": {
      "preset": "vinyl_texture",
      "volume": -18
    }
  },

  "patterns": {
