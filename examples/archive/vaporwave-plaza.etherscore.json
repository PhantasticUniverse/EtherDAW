{
  "meta": {
    "title": "Vaporwave Plaza",
    "composer": "EtherDAW",
    "mood": "nostalgic",
    "genre": "vaporwave",
    "description": "A dreamy vaporwave piece with lush electric piano, warm pads, and lo-fi textures"
  },
  "settings": {
    "tempo": 78,
    "key": "F major",
    "timeSignature": "4/4",
    "swing": 0
  },
  "instruments": {
    "vapor_keys": {
      "preset": "electric_piano",
      "volume": -3,
      "pan": 0.1,
      "effects": [
        { "type": "reverb", "wet": 0.6, "options": { "decay": 4 } },
        { "type": "chorus", "wet": 0.5, "options": { "frequency": 0.3 } },
        { "type": "phaser", "wet": 0.4, "options": { "frequency": 0.2, "octaves": 3, "baseFrequency": 350 } },
        { "type": "filter", "options": { "frequency": 2500, "type": "lowpass" } }
      ]
    },
    "vapor_pad": {
      "preset": "warm_pad",
      "volume": -6,
      "pan": -0.15,
      "effects": [
        { "type": "reverb", "wet": 0.7, "options": { "decay": 5 } },
        { "type": "vibrato", "wet": 0.3, "options": { "frequency": 2, "depth": 0.08 } },
        { "type": "filter", "options": { "frequency": 1800, "type": "lowpass" } },
        { "type": "bitcrusher", "wet": 0.15, "options": { "bits": 12 } }
      ]
    },
    "vapor_bass": {
      "preset": "sub_bass",
      "volume": -8,
      "effects": [
