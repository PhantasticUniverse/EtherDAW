        { "type": "bitcrusher", "wet": 0.1, "options": { "bits": 10 } }
      ]
    },
    "vapor_bell": {
      "preset": "fm_bell",
      "volume": -15,
      "pan": 0.25,
      "effects": [
        { "type": "reverb", "wet": 0.8, "options": { "decay": 4 } },
        { "type": "phaser", "wet": 0.3, "options": { "frequency": 0.15 } }
      ]
    }
  },
