      "tracks": {
        "vapor_keys": { "pattern": "keys_intro", "repeat": 4, "velocity": 0.4, "humanize": 0.1 },
        "vapor_pad": { "pattern": "pad_outro", "repeat": 8, "velocity": 0.35 }
      }
