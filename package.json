{
  "name": "etherdaw",
  "version": "0.9.3",
  "description": "A DAW designed for LLMs to compose music using the EtherScore JSON format",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "etherdaw": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && cp src/schema/etherscore.schema.json dist/schema/",
    "build:browser": "esbuild src/browser/index.ts --bundle --format=esm --outfile=dist/etherdaw-browser.js --external:@tonejs/midi",
    "build:manifest": "npx tsx scripts/generate-manifest.ts",
    "build:all": "npm run build && npm run build:browser && npm run build:manifest",
    "generate:references": "npx tsx scripts/generate-references.ts",
    "generate:benchmarks": "npx tsx scripts/generate-benchmark-spectrograms.ts",
    "watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "start": "node dist/cli.js"
  },
  "keywords": [
    "daw",
    "music",
    "composition",
    "llm",
    "audio",
    "midi",
    "synthesis"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mattiasbuelens/web-streams-polyfill": "^0.3.2",
    "@tonejs/midi": "^2.0.28",
    "ajv": "^8.17.1",
    "commander": "^12.1.0",
    "mpg123-decoder": "^1.0.3",
    "tonal": "^6.3.0",
    "tone": "^15.0.4"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "esbuild": "^0.27.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
